main
  variable gr set to new BlockGraphics()
  while true
    let x be randomInt(0, 19)
    let y be randomInt(0, 14)
    let colour be randomInt(0, 2^24 - 1)
    set gr to gr.withBlock(20 + x, 15 - y, colour)
    set gr to gr.withBlock(20 + x, 15 + y, colour)
    set gr to gr.withBlock(20 - x, 15 - y, colour)
    set gr to gr.withBlock(20 - x, 15 + y, colour)
    call gr.display()
  end while
end main
