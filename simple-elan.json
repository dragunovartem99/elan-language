{
  "name": "simple-elan",
  "displayName": "Elan without editor",
  "description": "Elan language compiler",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/elan-language/IDE.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Education"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "languages": [
    {
      "id": "elan",
      "extensions": [
        ".elan"
      ],
      "aliases": [
        "Elan",
        "elan"
      ]
    }
  ],
  "contributes": {
    "languages": [
      {
        "id": "elan",
        "extensions": [
          ".elan"
        ],
        "aliases": [
          "Elan",
          "elan"
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "elan",
        "when": "resourceExtname == .elan"
      }
    ],
    "snippets": [
      {
        "path": "./elan.code-snippets"
      }
    ],
    "debuggers": [
      {
        "type": "elan",
        "label": "Elan",
        "initialConfigurations": [
          {
            "name": "Elan Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask" : "${defaultBuildTask}",
            "program": "${workspaceFolder}/obj/bin/Debug/net7.0/${fileBasenameNoExtension}.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "npm run test-compile && npm run esbuild",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "async-file": "2.0.2",
    "yauzl": "2.10.0"
  },
  "devDependencies": {
    "@types/jsdom": "21.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@types/yauzl": "2.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3"
  }
}
