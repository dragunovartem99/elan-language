{
  "name": "elan",
  "displayName": "Elan",
  "description": "Elan language editor and compiler",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/elan-language/IDE.git"
  },
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Education"
  ],
  "scripts": {
    "esbuild-web-scripts": "esbuild ./src/web/web-scripts.ts --bundle --outfile=web-editor/web-scripts.js",
    "test-compile": "tsc -p ./ && esbuild ./src/web/web-scripts.ts --bundle --outfile=web-editor/web-scripts.js",
    "compile": "npm run test-compile && npm run format && npm run lint",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && cpr ./src/test/files ./out/test/files -o",
    "lint": "eslint src --ext ts",
    "test": "mocha out/test/**/*.test.js",
    "format": "prettier --ignore-path .gitignore --print-width 100 --log-level silent --end-of-line auto --write \"src/**/*.ts\""
  },
  "dependencies": {
    "async-file": "2.0.2",
    "yauzl": "2.10.0"
  },
  "devDependencies": {
    "@types/jsdom": "21.1.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/yauzl": "2.10.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "mocha": "^10.6.0",
    "cpr": "~3.0.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  }
}
