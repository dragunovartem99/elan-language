{
  "name": "elan",
  "displayName": "Elan",
  "description": "Elan language editor and compiler",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/elan-language/IDE.git"
  },
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Education"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "elan",
        "extensions": [
          ".elan"
        ],
        "aliases": [
          "Elan",
          "elan"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Elan configuration",
      "properties": {
        "elanLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "elanLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "elan.elanEditor",
        "displayName": "Elan Editor",
        "selector": [
          {
            "filenamePattern": "*.elan"
          }
        ],
        "priority": "default"
      }
    ],
    "taskDefinitions": [
      {
        "type": "elan",
        "when": "resourceExtname == .elan"
      }
    ],
    "debuggers": [
      {
        "type": "elan",
        "label": "Elan",
        "languages": [
          "elan"
        ],
        "initialConfigurations": [
          {
            "name": "Elan Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/obj/bin/Debug/net7.0/${fileBasenameNoExtension}.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-web-scripts": "cpr ./media/colourScheme.css ./web-editor/colourScheme.css -o && cpr ./media/elanStyle.css ./web-editor/elanStyle.css -o && esbuild ./src/web/web-scripts.ts --bundle --outfile=web-editor/web-scripts.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "npm run test-compile && npm run esbuild && npm run lint && npm run format",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --ignore-path .gitignore --print-width 100 --log-level silent --write \"src/**/*.ts\""
  },
  "dependencies": {
    "async-file": "2.0.2",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageclient": "^9.0.0",
    "yauzl": "2.10.0"
  },
  "devDependencies": {
    "@types/jsdom": "21.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@types/yauzl": "2.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "cpr": "~3.0.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
